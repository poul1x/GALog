#MessageBox {
    background-color: #ffffff;
}

#MessageBoxHeadTextLabel {
	font-family: Arial;
	font-size: 22px;
	font-weight: bold;
	color: #464646;
}

#MessageBoxIconLabel {
	margin-left: 15px;
	margin-right: 15px;
}

#MessageBoxMainTextLabel {
	font-family: Arial;
	font-size: 20px;
	color: #464646;
    /* margin-top: 10px;
    margin-bottom: 10px; */
    margin-right: 10px;
    /* margin-left: 10px; */
}

#MessageBoxButtonBar {
	background: #464646;
	/* max-height: 80px; */
}

#MessageBoxButtonBar > QPushButton {
	font-family: Arial;
	font-size: 22px;
	color: #000000;
    padding-top: 8px;
    padding-bottom: 8px;
    padding-left: 30px;
    padding-right: 30px;
    margin-top: 16px;
    margin-bottom: 16px;
	margin-right: 10px;
	margin-left: 0px;
	background: #c8dcff;
    border: none;
}

#MessageBoxButtonBar > QPushButton:disabled {
	color: #464646
}

#MessageBoxButtonBar > QPushButton:focus {
	background: #a0c3ff;
}

#MessageBoxButtonBar > QPushButton:hover {
	background: #739fff;
	color: white;
}

#MessageBox > QCheckBox {
	font-family: Arial;
	font-style: italic;
	font-size: 20px;
	margin-left: 10px;
	margin-right: 10px;
	margin-top: 5px;
	margin-bottom: 5px;
}

#MessageBox > QCheckBox::indicator {
	width: 22px;
	height: 22px;
	border: 1px solid black;
}

#MessageBox  QCheckBox::indicator:checked {
	background: url(res/icons/checked-black.svg);
}

