QMenuBar {
	background-color: #ffffff;
	spacing: 0px;
	margin: 0px;
}

QMenuBar::item {
	background-color: #ffffff;
	padding: 6px;
}

QMenuBar::item:selected {
	background: #464646;
	color: #ffffff;
}

QMenu {
    background-color: #ffffff;
	border: none;
}

QMenu::item:selected {
	background: #464646;
	color: #ffffff;
}

QStatusBar {
    background-color: #464646;
	color: #ffffff;
	padding-top: 5px;
	padding-bottom: 5px;
	padding-left: 2px;
	padding-right: 2px;
	min-height: 22px;
}
