########################################
# General
########################################
name: decimalNumber
pattern: '\b-?\d+(?:\.\d+)?\b'
style:
  color:
    background: "#10000000"
  # formatting:
  #   underline: true
---
name: HashSymbolWithDecimalNumber
pattern: '#\d+'
style:
  color:
    background: "#10000000"
  # formatting:
  #   underline: true
---
name: hexadecimalNumber
pattern: '0x[0-9a-fA-F]+'
style:
  color:
    background: "#10000000"
---
name: uppercaseWord
pattern: '\b[A-Z_]+\b'
style:
  color:
    background: "#10000000"
---

########################################
# Packages & file paths
########################################
---
name: DotSeparatedWords
pattern: '[a-zA-Z_]{1}\w+\.[\w\./]+'
style:
  formatting:
    underline: true
    mediumbold: true
---
name: FilePath
pattern: '\w+/[^\s]+'
style:
  formatting:
    underline: true
    mediumbold: true
---
####
########################################
# Exception
########################################
---
name: FatalExceptionMain
pattern: 'FATAL EXCEPTION: main'
style:
  color:
    background: '#10000000'
  formatting:
    bold: true
---
name: FatalExceptionProcessName
pattern: 'Process:\s+.+, PID: \d+'
style:
  color:
    background: '#10000000'
  formatting:
    bold: true
---
name: ExceptionBegin
pattern: '.*Exception:\s*.+'
style:
  color:
    background: '#10000000'
  formatting:
    bold: true
---
name: ExceptionCausedBy
pattern: 'Caused by:\s*.+'
style:
  color:
    background: '#10000000'
  formatting:
    bold: true
---
name: ExceptionStacktraceLine
pattern: 'at\s+.+\(.+\)$'
style:
  color:
    background: '#10000000'
---
name: ExceptionMoreLines
pattern: '... \d+ more$'
style:
  color:
    background: '#10000000'


